<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.joyrun.homepage.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="#EFDBD5"
        android:layout_height="match_parent"
        tools:context=".homepage.view.MainActivity">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:abb_indicatorAppearance="round"
            app:abb_indicatorColor="@color/deep_gray"
            app:abb_indicatorHeight="4dp"
            app:abb_indicatorMargin="18dp"
            android:paddingBottom="5dp"
            app:abb_rippleEnabled="false"
            app:abb_selectedIndex="0"
            app:abb_tabColor="@color/gray"
            app:abb_tabColorSelected="@color/deep_gray"
            app:abb_tabs="@menu/main_menu"
            app:abb_textAppearance="@style/CustomText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_vp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root_runindoor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3a3440"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img_topicon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_runoutdoor_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="室内跑步"
                android:textColor="#88858c"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/img_topicon"
                app:layout_constraintStart_toEndOf="@id/img_topicon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/target_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#312b35"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/target_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目标距离: 5.00 公里"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="已完成 0%"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        android:background="#423c46"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="#FFFFFF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_indoor_total_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:text="0.00"
                android:textColor="#FFFFFF"
                android:textSize="100sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/target_card" />

            <TextView
                android:id="@+id/label_total_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-10dp"
                android:text="总距离"
                android:textColor="#88858c"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_indoor_total_distance" />

            <LinearLayout
                android:id="@+id/info_group1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_total_distance">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_indoor_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:12"
                        android:textColor="#FFFFFF"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总时长"
                        android:textColor="#88858c"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_indoor_pace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-'--''"
                        android:textColor="#FFFFFF"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实时配速"
                        android:textColor="#88858c"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_group2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_group1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="#FFFFFF"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余目标"
                        android:textColor="#88858c"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_indoor_bg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/img_indoor_finish"
                app:layout_constraintEnd_toEndOf="@id/img_indoor_finish"
                app:layout_constraintStart_toStartOf="@id/img_indoor_finish"
                app:layout_constraintTop_toTopOf="@id/img_indoor_finish" />

            <ImageView
                android:id="@+id/img_indoor_finish"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/ic_finish"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_indoor_pause_continue"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_group2" />

            <ImageView
                android:id="@+id/img_indoor_bg2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/img_indoor_pause_continue"
                app:layout_constraintEnd_toEndOf="@id/img_indoor_pause_continue"
                app:layout_constraintStart_toStartOf="@id/img_indoor_pause_continue"
                app:layout_constraintTop_toTopOf="@id/img_indoor_pause_continue" />

            <ImageView
                android:id="@+id/img_indoor_pause_continue"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_pause"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_indoor_finish"
                app:layout_constraintTop_toBottomOf="@+id/info_group2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/countdown_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#191C59"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="150sp"
                android:textStyle="bold" />
        </FrameLayout>
    </FrameLayout>
</layout>
